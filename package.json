{
  "name": "binsplash",
  "version": "1.2.5",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --win --publish never",
    "deploy": "electron-builder build --win --publish always"
  },
  "build": {
    "appId": "com.github.devmarcius.binsplash",
    "win": {
      "target": [
        "portable",
        "nsis",
        "zip"
      ]
    },
    "nsis": {
      "artifactName": "${name}-${version}-setup.${ext}",
      "oneClick": false,
      "perMachine": false,
      "runAfterFinish": false,
      "deleteAppDataOnUninstall": true,
      "allowToChangeInstallationDirectory": true
    },
    "portable": {
      "artifactName": "${name}-${version}-portable.${ext}"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "DevMarcius",
        "repo": "binsplash"
      }
    ]
  },
  "author": "DevMarcius",
  "license": "ISC",
  "devDependencies": {
    "electron": "^12.0.6",
    "electron-builder": "^22.10.5"
  },
  "dependencies": {}
}
