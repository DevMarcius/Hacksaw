{
  "name": "hacksaw",
  "productName": "hacksaw",
  "version": "2.0.0",
  "description": "my league modding suite",
  "main": "src/main_process.js",
  "build": {
    "appId": "com.github.devmarcius.hacksaw",
    "win": {
      "target": [
        "portable",
        "nsis",
        "zip"
      ]
    },
    "nsis": {
      "artifactName": "${name}-${version}-setup.${ext}",
      "oneClick": false,
      "perMachine": false,
      "runAfterFinish": false,
      "deleteAppDataOnUninstall": true,
      "allowToChangeInstallationDirectory": true
    },
    "portable": {
      "artifactName": "${name}-${version}-portable.${ext}"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "DevMarcius",
        "repo": "binsplash"
      }
    ]
  },
  "scripts": {
    "start": "electron .",
    "package": "electron-forge package",
    "build": "electron-builder build --win --publish never",
    "deploy": "electron-builder build --win --publish always",
    "build:css": "tailwindcss -i src/style.css -o public/style.css",
    "watch:css": "tailwindcss -i src/style.css -o public/style.css"
  },
  "keywords": [],
  "author": {
    "name": "DevMarcius",
    "email": "Marcius922@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "babylonjs": "^4.2.0",
    "open": "^8.2.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.3.1",
    "electron": "13.1.6",
    "electron-builder": "^22.11.7",
    "tailwindcss": "^2.2.4"
  }
}
